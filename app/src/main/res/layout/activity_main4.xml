<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/q7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q#7 Who is the father of Computer?"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/rgq7"
        android:layout_below="@id/q7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <RadioButton
            android:id="@+id/s2b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allen Turing"
            android:textColor="@color/cyan"/>

        <RadioButton
            android:id="@+id/s2b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charles Babbage"
            android:textColor="@color/cyan"/>

        <RadioButton
            android:id="@+id/s2b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moulvi Tameez-ud-Din"
            android:textColor="@color/cyan"
            />

        <RadioButton
            android:id="@+id/s2b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Simur Cray"
            android:textColor="@color/cyan"/>
    </RadioGroup>

    <TextView
        android:layout_below="@id/rgq7"
        android:id="@+id/q8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q#8 The basic operations performed by a computer are______?"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/rgq8"
        android:layout_below="@id/q8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <RadioButton
            android:id="@+id/s2b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arithmetic operation"
            android:textColor="@color/cyan"/>

        <RadioButton
            android:id="@+id/s2b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logical operation"
            android:textColor="@color/cyan"/>

        <RadioButton
            android:id="@+id/s2b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Storage and relative"
            android:textColor="@color/cyan"
            />

        <RadioButton
            android:id="@+id/s2b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All the above"
            android:textColor="@color/cyan"/>
    </RadioGroup>

    <Button
        android:id="@+id/next1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rgq8"
        android:text="next"/>

</RelativeLayout>