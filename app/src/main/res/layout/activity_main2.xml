<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@drawable/background"
   >

    <TextView
        android:id="@+id/q3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q#3 When quaid-e-azam was born?"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/rgq3"
        android:layout_below="@id/q3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >

    <RadioButton
        android:id="@+id/s2b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dec 25"
        android:textColor="@color/cyan"/>

    <RadioButton
        android:id="@+id/s2b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="oct 22"
        android:textColor="@color/cyan"/>

    <RadioButton
        android:id="@+id/s2b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nov 18"
        android:textColor="@color/cyan"
         />

    <RadioButton
        android:id="@+id/s2b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sep 12"
        android:textColor="@color/cyan"/>
    </RadioGroup>

    <TextView
        android:layout_below="@id/rgq3"
        android:id="@+id/q4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q#4 Who gave the idea of pakistan?"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/rgq4"
        android:layout_below="@id/q4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <RadioButton
            android:id="@+id/s2b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quaid-e-azam"
            android:textColor="@color/cyan"/>

        <RadioButton
            android:id="@+id/s2b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allama-iqbal"
            android:textColor="@color/cyan"/>

        <RadioButton
            android:id="@+id/s2b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chaudhry Rahmat Ali"
            android:textColor="@color/cyan"
            />

        <RadioButton
            android:id="@+id/s2b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atta Ullah"
            android:textColor="@color/cyan"/>
    </RadioGroup>

<Button
    android:id="@+id/next1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rgq4"
    android:text="next"/>

</RelativeLayout>